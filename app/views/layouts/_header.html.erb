  .modal-footer {
      height: 70px;
      margin: 0;
  }
  .modal-footer .btn {
      font-weight: bold;
  }
  .modal-footer .progress {
      display: none;
      height: 32px;
      margin: 0;
  }
  .input-group-addon {
